@page "/settings/units"
@using warehouseapp.Enums
@using warehouseapp.Helpers

<h3 class="page-title mb-2">Units of Measurement</h3>

<p class="text-muted mb-4">
    These units are predefined and used consistently across the system.
</p>

<div class="card shadow-sm settings-card">
    <div class="card-body p-0">

        <table class="table table-hover align-middle mb-0">
            <thead>
                <tr>
                    <th>Unit</th>
                    <th class="text-end">Symbol</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var unit in Enum.GetValues<UnitOfMeasurementEnum>())
                {
                    <tr>
                        <td class="fw-medium">@unit</td>
                        <td class="text-end">
                            <span class="unit-badge">
                                @UnitHelper.GetSymbol(unit)
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
